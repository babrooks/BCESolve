#ifndef BCELINEEDIT_HPP
#define BCELINEEDIT_HPP

#include <QtWidgets>
#include "guiDataState.hpp"

class BCELineEdit : public QLineEdit
{
  Q_OBJECT;

public:

  GUIDataState::BCESliderType sliderType;
  int player;

  BCELineEdit(GUIDataState::BCESliderType _type, int _player):
    sliderType(_type), player(_player)
  {}

};

#endif
